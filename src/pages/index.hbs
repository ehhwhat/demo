                        <a href="general/cv-flat.html" class="btn btn-outline-dark waves-effect" title="View this">View CV <i class="fa fa-arrow-right"></i></a>
                        '
                }}
            {{/sublayouts/grid-wide__colfluid}}
        {{/sublayouts/grid-wide}}

