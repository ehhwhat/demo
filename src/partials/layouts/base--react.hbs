{{!-- layouts/base--react.hbs --}}

<!doctype html>
<html class="{{html-class}}">
    <head>
        {{> includes/meta }}
        <title>
            {{#if title}}
                {{title}}
            {{else}}
                Base Page Title
            {{/if}}
        </title>
        <script src="https://cdn.jsdelivr.net/npm/vanilla-lazyload@8.17.0/dist/lazyload.min.js"></script>
        {{> includes/styles
                domainprefix='../../'
                version='24'
        }}
        {{#> head-block}}
            {{!-- Custom <head> content per page could be added. --}}
        {{/head-block}}
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <script type="text/javascript">
            // When ready...
            window.addEventListener("load",function() {
                // Set a timeout...
                setTimeout(function(){
                    // Hide the address bar!
                    window.scrollTo(0,document.body.scrollHeight);
                }, 0);
            });
        </script>
    </head>

    <body data-spy="scroll" data-target="#navbar" data-offset="150" class="smooth-scroll {{body-class}}">

        {{#> main-block}}
            {{!-- main content goes here. --}}
        {{/main-block}}

        {{> includes/scripts
            domainprefix='../../'
            version='24'
        }}

        {{#> scripts-block
                domainprefix='../../'
                version='24'}}
                {{!-- Custom scripts. --}}
        {{/scripts-block}}

    </body>
</html>
